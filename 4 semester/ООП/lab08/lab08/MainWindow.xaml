<Window x:Class="lab08.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab08"
        xmlns:configuration="clr-namespace:System.Configuration;assembly=System.Configuration.ConfigurationManager"
        mc:Ignorable="d"
        Title="lab08" Height="450" Width="600" Closing="MainWindow_OnClosing">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
        
		<StackPanel HorizontalAlignment="Left">
			<Button Content="Add student" Width="300" Margin="10" Click="Add_Click"/>
			<Button Content="Delete student" Width="300" Margin="10" Click="Delete_Click"/>
			<Button Content="Edit student" Width="300" Margin="10" Click="Edit_Click"/>
			<Button Content="Search" Width="300" Margin="10" Click="Search_Click"/>
			<Button Content="←" Width="300" Margin="10" Click="down"/>
			<Button Content="→" Width="300" Margin="10" Click="up"/>
		</StackPanel>
        
		<StackPanel Grid.Row="1">
			<DataGrid x:Name="dataGrid"></DataGrid>
		</StackPanel>
	</Grid>
</Window>
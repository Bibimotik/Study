<Window
	x:Class = "application.Administration.AddMechanic"
	xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local = "clr-namespace:application.Administration"
	mc:Ignorable = "d"
	Title = "AddMechanic" Height = "500" Width = "800">
	<Grid>
		<StackPanel>
			<Label>Фамилия</Label>
			<TextBox x:Name="secondName_text"/>
			
			<Label>Имя</Label>
			<TextBox x:Name="firstName_text"/>
			
			<Label>Отчество</Label>
			<TextBox x:Name="thirdName_text"/>
			
			<Label>Почта</Label>
			<TextBox x:Name="mail_text"/>
			
			<Label>Телефон</Label>
			<TextBox x:Name="phone_text"/>
			
			<Button Content="сохранить" Click="save_Click"/>
		</StackPanel>
	</Grid>
</Window>

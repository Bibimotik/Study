<Window
	x:Class = "application.InteractWindow.ForSparePart.AddSparePart"
	xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local = "clr-namespace:application.InteractWindow.ForSparePart"
	mc:Ignorable = "d"
	Title = "AddSparePart" Height = "450" Width = "800">
	<Grid>
		<StackPanel>
			<Label>Название</Label>
			<TextBox x:Name="label_text"/>
				
			<Label>Label и Model ID</Label>
			<ComboBox x:Name="labelModelBox">
				
			</ComboBox>
				
			<Label>Описание</Label>
			<TextBox x:Name="description_text"/>
			
			<Label>Количество</Label>
			<TextBox x:Name="quantity_text"/>
			
			<Label>Цена</Label>
			<TextBox x:Name="price_text"/>
				
			<Label>Статус</Label>
			<CheckBox x:Name="status_text" IsChecked="False"/>
			
			<Button Content="сохранить" Click="add_car"/>
		</StackPanel>
	</Grid>
</Window>

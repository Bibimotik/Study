<Window
	x:Class = "application.ShowWindow.ShowCarsSpareParts"
	xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local = "clr-namespace:application.ShowWindow"
	mc:Ignorable = "d"
	Title = "ShowCarsSpareParts" Height = "600" Width = "850">
	<Grid>
		<StackPanel>
			<ScrollViewer VerticalScrollBarVisibility="Auto" Height="250" Margin="0 0 0 10">
				<DataGrid x:Name="carsGrid" AutoGenerateColumns="True"/>
			</ScrollViewer>
			<ScrollViewer VerticalScrollBarVisibility="Auto" Height="250">
				<DataGrid x:Name="sparePartsGrid" AutoGenerateColumns="True"/>
			</ScrollViewer>
		</StackPanel>
	</Grid>
</Window>

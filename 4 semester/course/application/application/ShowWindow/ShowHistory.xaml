<Window
	x:Class = "application.ShowWindow.ShowHistory"
	xmlns = "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc = "http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d = "http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local = "clr-namespace:application.ShowWindow"
	mc:Ignorable = "d"
	Title = "ShowHistory" Height = "500" Width = "800">
	<Grid>
		<StackPanel>
			<Label>Ваш номер телефона:</Label>
			<TextBox x:Name="phone_text"/>
			<Button Content="войти" Click="login_Click"/>
			
			<ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
				<DataGrid x:Name="orderCars" AutoGenerateColumns="True"/>
			</ScrollViewer>
			<ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
				<DataGrid x:Name="orderSpareParts" AutoGenerateColumns="True"/>
			</ScrollViewer>
		</StackPanel>
	</Grid>
</Window>
